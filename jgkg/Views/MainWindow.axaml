<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:jgkg.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="jgkg.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="jgkg">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
<Window.Styles>
        <Style Selector="TextBlock.h1">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,16,2,1"/>
        </Style>
    </Window.Styles>
<StackPanel Orientation="Horizontal">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Long Title" HorizontalAlignment="Right" Margin="0,8,0,9"></TextBlock>
        <TextBlock Text="short" HorizontalAlignment="Right" Margin="0,8,0,1"></TextBlock>
        <TextBlock Text="short" Classes="h1"></TextBlock>
        <TextBlock Text="short" Classes="h1"></TextBlock>
        
    </StackPanel>
    <StackPanel Orientation="Vertical">
        <TextBox Margin="0,1,0,1"></TextBox>
        <TextBox Margin="0,1,0,1"></TextBox>
        <TextBox Margin="0,1,0,1"></TextBox>
    <TextBox></TextBox>
    </StackPanel>
</StackPanel>
</Window>